<style>
.navbar {
 position: relative;
 
  width: 100%;
  background-color: #666666;
  color: black;
  text-align: center;
  padding: 10px;
}
</style>

<nav class="navbar navbar-expand-lg ">
  <div class="container-fluid">
    <a class="navbar-brand" href="#">Ziigs</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <%= link_to 'Home',root_path,class:"nav-link"%>
        </li>
        </ul>
        <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
        <% if !user_signed_in?%>
        <% unless params[:controller] == "devise/sessions" && params[:action] == "new" %>
        <li class="nav-item">
          <%= link_to 'SignIn',user_session_path,class:"nav-link"%>
        </li>
        <%end%>
        <% unless params[:controller] == "user/registrations" && params[:action] == "new" %>
        <li class="nav-item">
          <%= link_to 'SignUp',new_user_registration_path,class:"nav-link"%>
        </li>
        <%end%>
        <%end%>
        <% if user_signed_in? %>
            <li class="nav-item">
              <%= button_to "Logout", destroy_user_session_path, method: :delete, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to profile_path, class: "nav-link" do %>
                <i class='fas fa-user-alt' style='font-size:20px;color:black'></i>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to cart_item_path, class: "nav-link" do %>
                <i class="fa fa-shopping-cart" style="font-size:20px;color:black"></i>
              <% end %>
            </li>
        <% end %>

      </ul>
      
    </div>
  </div>
</nav>